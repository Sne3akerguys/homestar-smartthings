CREATE MODEL SmartThingsBattery WITH
    schema:name = "smart-things-battery",
    iot:facet = iot-facet:sensor,
    iot:facet = iot-facet:sensor.battery
ATTRIBUTE battery WITH
    schema:name = "battery",
    iot:purpose = iot-purpose:sensor.battery,
    iot:type = iot:type.number,
    iot:unit = iot-unit:math.fraction.percent,
    iot:minimum = 0,
    iot:maximum = 100,
    iot:read = true
;
